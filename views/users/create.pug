extends ../layouts/common

block content
    h1 Create Users

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text", value=values ? values.name : "")
        .form-group     
            label(for="phone") Phone
            input#phone.form-control(name="phone", type="text", value=values ? values.phone : "")  
        .form-group
            label(for="address") Address
            input#address.form-control(name="address", type="text", value=values ? values.address : "")   
        
        button.btn.btn-primary Create